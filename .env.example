# Ztooly Environment Configuration - Tools Made Simple
# Production-ready settings for secure analytics tracking and deployment

# Application Settings
APP_NAME=Ztooly
APP_URL=https://ztooly.com
APP_ENV=production

# Analytics Configuration
VITE_ANALYTICS_ENABLED=false
VITE_API_URL=http://localhost:3001/api

# Database Configuration (MySQL - freesqldatabase.com)
DB_HOST=sql12.freesqldatabase.com
DB_USER=sql12786145
DB_PASSWORD=your_db_password_here
DB_NAME=sql12786145
DB_PORT=3306

# Admin API Security
ADMIN_KEY=change_this_in_production_admin_key_2024
API_SECRET=your_api_secret_here

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_BLOCK_DURATION_MS=300000

# IP Detection Configuration
ENABLE_IP_TRACKING=true
IP_PRIVACY_MODE=false
STORE_USER_AGENTS=true

# Analytics Configuration
ANALYTICS_ENABLED=true
ANALYTICS_BATCH_SIZE=50
ANALYTICS_FLUSH_INTERVAL=30000

# Security Settings
CORS_ORIGIN=http://localhost:3000,https://your-domain.com
NODE_ENV=development

# External Services
ENABLE_PUBLIC_IP_PROXY=true
IP_SERVICE_TIMEOUT=5000

# Logging
LOG_LEVEL=info
LOG_ANALYTICS_REQUESTS=false
LOG_IP_ADDRESSES=false

# Feature Flags
ENABLE_ADMIN_ENDPOINTS=true
ENABLE_IP_DIAGNOSTICS=false
ENABLE_DETAILED_TRACKING=true
